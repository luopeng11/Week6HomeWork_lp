<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.luopeng.week6homework_lp.ContentFragment">

    <!-- TODO: Update blank fragment layout -->
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_webView"
        android:layout_marginBottom="60dp"></WebView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#0f0"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:id="@+id/content_back"
            android:src="@mipmap/contentback"
           />
        <ImageView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:id="@+id/content_collect"
            android:src="@mipmap/collectcontent"
            android:onClick="collect"/>
    </LinearLayout>


</RelativeLayout>
