<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luopeng.week6homework_lp.MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLayout">
        <!--内容区-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/main_linear"
                android:orientation="horizontal">
                <android.support.design.widget.TabLayout
                    android:layout_width="0dp"
                    android:id="@+id/main_tab"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="#0f0"></android.support.design.widget.TabLayout>
                <ImageButton
                    android:background="#0000"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/more"
                    android:onClick="showDrawer"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_btn_search"/>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/main_ViewPager"
                android:layout_below="@id/main_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v4.view.ViewPager>
        </RelativeLayout>

        <!--菜单区  右侧-->
        <LinearLayout
            android:layout_gravity="end"
            android:background="#fff"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/serach_back"
                    android:onClick="search"
                    android:src="@mipmap/searchbackbtn"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="茶百科"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/righttopbutton"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#0f0"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:layout_weight="3"
                    android:hint="关键字"
                    android:text="西湖龙井"
                    android:drawableLeft="@mipmap/searchico"
                    android:background="@mipmap/myedit"
                    android:id="@+id/edit_search"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/gosearch"
                    android:onClick="goSearch"
                    android:id="@+id/btn_search"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="热门搜索:茶"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/shoucangjia"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="收藏夹"
                    android:textSize="14dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"/>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="我的收藏"
                android:onClick="myCollection"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/shoucangjia"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="关于"
                    android:textSize="14dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="版权信息"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="意见反馈"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:id="@+id/main_frameLayout"></FrameLayout>
</RelativeLayout>
